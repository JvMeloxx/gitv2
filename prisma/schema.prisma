generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String     @id @default(uuid())
  email        String     @unique
  passwordHash String
  name         String
  createdAt    DateTime   @default(now())
  lists        GiftList[]
}

model GiftList {
  id            String       @id @default(uuid())
  slug          String       @unique
  title         String
  organizerName String
  eventType     String
  eventDate     String
  eventTime     String?  // New field for event time
  location      String?
  organizerPhone String?
  organizerEmail String?
  coverImageUrl String?
  theme         String       @default("default")
  backgroundImageUrl String?
  isCashEnabled      Boolean  @default(false)
  balance            Float    @default(0)
  quotaValues        Int[]    @default([100, 200, 300, 500])
  createdAt          DateTime     @default(now())
  updatedAt          DateTime     @updatedAt
  userId             String?
  attendances        Attendance[]
  gifts              Gift[]
  selections         Selection[]
  withdrawalRequests WithdrawalRequest[]
  user               User?        @relation(fields: [userId], references: [id])
}

model WithdrawalRequest {
  id          String   @id @default(uuid())
  listId      String
  amount      Float
  status      String   @default("PENDING") // PENDING, COMPLETED, REJECTED
  pixKey      String?
  bankDetails String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  list        GiftList @relation(fields: [listId], references: [id], onDelete: Cascade)
}

model Gift {
  id             String      @id @default(uuid())
  listId         String
  name           String
  category       String
  description    String?
  imageUrl       String?
  priceEstimate  Float?
  buyLink        String?
  quantityNeeded Int         @default(1)
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt
  list           GiftList    @relation(fields: [listId], references: [id], onDelete: Cascade)
  selections     Selection[]
}

model Selection {
  id           String   @id @default(uuid())
  giftId       String?
  listId       String?
  guestName    String
  guestContact String?
  message      String?
  quantity     Int      @default(1)
  paymentStatus String  @default("PENDING") // PENDING, PAID, CANCELLED
  paymentId    String?
  platformFee  Float?
  createdAt    DateTime @default(now())
  gift         Gift?    @relation(fields: [giftId], references: [id], onDelete: Cascade)
  list         GiftList? @relation(fields: [listId], references: [id], onDelete: Cascade)
}

model Attendance {
  id           String   @id @default(uuid())
  listId       String
  guestName    String
  guestContact String?
  status       String
  message      String?
  adultsCount   Int      @default(0)
  childrenCount Int      @default(0) // 6-10 years
  babiesCount   Int      @default(0) // 0-5 years
  companionName String?  // Optional: keep for backwards compatibility or single name if needed, but UI will focus on counts. 
  // User asked to replace the "way we did", so better to be clean.
  // Actually, keeping guestName is enough. The counters replace the extras.
  createdAt    DateTime @default(now())
  list         GiftList @relation(fields: [listId], references: [id], onDelete: Cascade)
}
