generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String     @id @default(uuid())
  email        String     @unique
  passwordHash String
  name         String
  createdAt    DateTime   @default(now())
  lists        GiftList[]
}

model GiftList {
  id            String       @id @default(uuid())
  slug          String       @unique
  title         String
  organizerName String
  eventType     String
  eventDate     String
  location      String?
  organizerPhone String?
  organizerEmail String?
  coverImageUrl String?
  theme         String       @default("default")
  backgroundImageUrl String?
  isCashEnabled Boolean @default(false)
  mercadopagoPublicKey String?
  mercadopagoAccessToken String?
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
  userId        String?
  attendances   Attendance[]
  gifts         Gift[]
  user          User?        @relation(fields: [userId], references: [id])
}

model Gift {
  id             String      @id @default(uuid())
  listId         String
  name           String
  category       String
  description    String?
  imageUrl       String?
  priceEstimate  Float?
  buyLink        String?
  quantityNeeded Int         @default(1)
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt
  list           GiftList    @relation(fields: [listId], references: [id], onDelete: Cascade)
  selections     Selection[]
}

model Selection {
  id           String   @id @default(uuid())
  giftId       String
  guestName    String
  guestContact String?
  message      String?
  quantity     Int      @default(1)
  paymentStatus String  @default("PENDING") // PENDING, PAID, CANCELLED
  paymentId    String?
  platformFee  Float?
  createdAt    DateTime @default(now())
  gift         Gift     @relation(fields: [giftId], references: [id], onDelete: Cascade)
}

model Attendance {
  id           String   @id @default(uuid())
  listId       String
  guestName    String
  guestContact String?
  status       String
  message      String?
  companionName String?
  hasChildren  Boolean  @default(false)
  createdAt    DateTime @default(now())
  list         GiftList @relation(fields: [listId], references: [id], onDelete: Cascade)
}
